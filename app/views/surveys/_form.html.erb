<div class="row">
	<div class="col-md-8">

		<% if @survey.errors.any? %>
			<% @survey.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>
		<% end %>

		<%#= form_for(@survey) do |f| %>
		<%= nested_form_for @survey do |f| %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true  %>
			</div>

			<!-- <h5>Questions:</h5> -->
			<%= f.fields_for :questions do |builder| %>
					<%= render 'question_fields', f: builder %>								
			<% end %>
			<p><%= f.link_to_add "Add a question", :questions %></p>

			<div class="form-group">
				<%= f.submit class: "btn btn-success" %><br /><br />
				<%= link_to "Cancel", surveys_path %>
			</div>

		<% end %>

	</div>
</div>

